.container {
  padding: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.summary {
  background-color: #f0f0f0;
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 20px;
}

.summary-item {
  margin-bottom: 10px;
}

.label {
  font-weight: bold;
}

.value {
  color: #007AFF;
}

.subtitle {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.order-item {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
}

.merchant-name {
  font-weight: bold;
  margin-bottom: 5px;
  display: block;
}

.order-quantity, .order-revenue, .order-profit {
  font-size: 14px;
  color: #666;
  display: block;
}