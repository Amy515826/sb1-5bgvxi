.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}

.date {
  font-size: 16px;
  margin-bottom: 30px;
}

.btn {
  width: 80%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #007AFF;
  color: white;
  border-radius: 5px;
  margin-bottom: 20px;
}