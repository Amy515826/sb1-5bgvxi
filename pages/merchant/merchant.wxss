.container {
  padding: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.date {
  font-size: 16px;
  text-align: center;
  margin-bottom: 30px;
}

.form {
  margin-bottom: 30px;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  display: block;
  margin-bottom: 5px;
}

.input, .picker {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
}

.value {
  font-weight: bold;
}

.submit-btn {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: #007AFF;
  color: white;
  border-radius: 4px;
  text-align: center;
}